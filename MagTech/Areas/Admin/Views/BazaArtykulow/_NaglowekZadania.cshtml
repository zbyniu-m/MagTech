@model MagTech.Models.NaglowekKoszykZadania
    <div class="modal fade" id="utworzNaglowekZadania">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Utwórz nagłówek zadania</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>x</span>
                    </button>
                </div>               
                  <div class="modal-body">
                        <form action="JobHeaderCreate">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Nazwa" class="control-label">Nazwa</label>
                                <input asp-for="Nazwa" class="form-control" />
                                <span asp-validation-for="Nazwa" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Date" class="control-label">Data:</label>
                                <input asp-for="Date" readonly="" value="@DateTime.Now" class="form-control" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="form-group" >                                
                                <input asp-for="Status" type="hidden" value="utworzony" class="form-control" />
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Priorytet" class="control-label">Priorytet:</label>
                                <input asp-for="Priorytet" value="100" class="form-control" />
                                <span asp-validation-for="Priorytet" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="KtoUtworzyl" class="control-label">Autor:</label>
                                <input asp-for="KtoUtworzyl" value="@System.Security.Principal.WindowsIdentity.GetCurrent().Name" class="form-control" />
                                <span asp-validation-for="KtoUtworzyl" class="text-danger"></span>
                            </div>                          
                        </form>
                    </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Zamknij</button>
                    <button type="button" class="btn btn-success" data-save="modal">Zapisz</button>
                </div>
                </div>
            </div>
        </div>


