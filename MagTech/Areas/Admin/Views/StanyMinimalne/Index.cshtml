@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-12">
        <h2>Raport stanów minimalnych</h2>
    </div>
</div>

<br />

<div class="container-fluid border rounded p-lg-5">
    <table id="tblData" class="table table-striped table-bordered nowrap table-dark display responsive nowrap" style="width:100%">
        <thead class="thead-dark" data-table="tblData">
            <tr class="table table-hover">
                <th scope="col">Numer</th>
                <th scope="col">Nazwa</th>
                <th scope="col">Stan</th>
                <th scope="col">Min.</th>
                <th scope="col">Dodatkowe informacje</th>
                <th scope="col">Grupa materiałowa</th>
                <th scope="col">Regał</th>
                <th scope="col">Półka</th>
                <th scope="col">Przedziału</th>
                <th scope="col">Szeregu</th>
                <th scope="col">Wielkość pojemnika</th>
                <th scope="col">FIFO</th>
                <th scope="col">Typ</th>
                <th scope="col">Tag</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Numer</th>
                <th>Nazwa</th>
                <th>Stan</th>
                <th>Min.</th>
                <th>Dodatkowe informacje</th>
                <th>Grupa materiałowa</th>
                <th>Regał</th>
                <th>Półka</th>
                <th>Przedziału</th>
                <th>Szeregu</th>
                <th>Wielkość pojemnika</th>
                <th>FIFO</th>
                <th>Typ</th>
                <th>Tag</th>
                <th></th>
            </tr>
        </tfoot>
    </table>
</div>


@section Scripts{
    <script src="~/js/stanyminimalne.js"></script>

}
