<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MagTech</title>
    <link rel="stylesheet" href="~/lib/DataTables/Responsive-2.2.5/css/responsive.bootstrap4.css" />
    <link rel="stylesheet" href="~/lib/DataTables/DataTables-1.10.21/css/dataTables.bootstrap4.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/darkly/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/DataTables/Buttons-1.6.3/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/lib/toastr.js/toastr.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-sweetalert/sweetalert.min.css" />
</head>
<body>
    <header class="main-header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MagTech</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Rejestr wydań</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Hanel
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="Admin" asp-controller="BazaArtykulow" asp-action="Index">Baza artykułów - magazyn</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="RaportOperacji" asp-action="Index">Raport operacji</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="StanyMinimalne" asp-action="Index">Stany minimalne</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="Guest" asp-controller="Zadania" asp-action="Index">Zadania</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="ListaZadan" asp-action="Index">Lista zadań</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Zlecenia" asp-action="Index">Zlecenia</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="ListaZlecen" asp-action="Index">Lista zleceń</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="form-model">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    
                </div>            
            </div>
        </div>
    </div>

    <footer class="border-top footer text-white-50 bg-primary">
        <div class="container-fluid">
            &copy; 2020 - MagTech
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/DataTables/DataTables-1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/DataTables/DataTables-1.10.21/js/dataTables.bootstrap4.js"></script>
    <script src="~/lib/DataTables/Responsive-2.2.5/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/lib/toastr.js/toastr.min.js"></script>
    <script src="~/lib/bootstrap-sweetalert/sweetalert.min.js"></script>
    <script src="~/lib/DataTables/JSZip-2.5.0/jszip.min.js"></script>
    <script src="~/lib/DataTables/Buttons-1.6.3/js/dataTables.buttons.min.js"></script>
    <script src="~/lib/DataTables/Buttons-1.6.3/js/buttons.html5.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
